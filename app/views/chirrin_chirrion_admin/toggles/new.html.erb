<h1>Create Toggle</h1>
<%= form_tag(controller: 'toggles', action: 'create', method: 'post', class: 'toggle-form') do |form| %>
  <p>
    <%= label_tag(:name, 'Name*') %>
    <%= text_field_tag(:name) %>
  </p>
  <p>
    <%= check_box_tag(:active, (params[:active].present? ? params[:active] : '1')) %>
    <%= label_tag(:active, 'Active') %>
  </p>
  <p>
    <%= label_tag(:description, 'Description') %>
    <%= text_area_tag(:description, params[:description], size: '24x6') %>
  </p>
  <p>
    <%= submit_tag('Create') %>
  </p>
<% end %>
